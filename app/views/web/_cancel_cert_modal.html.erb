<section class="cf-modal" id="confirm-cancel-certification" role="aria-alertdialog" aria-labelledby="confirm-cancel-certification-title" aria-describedby="confirm-cancel-certification-desc" hidden="hidden">
    <div class="cf-modal-body">
     <!-- Modal box messaging -->
          <h1 class="cf-modal-title" id-"confirm-cancel-certification-title">Cancel certification?</h1>
          <p class="cf-modal-text" id-"confirm-cancel-certification-desc">Are you sure you can't certify this case? Any changes you made in Caseflow will not be saved and the certification date will not be set in VACOLS.</p>

          <div class="cf-push-row cf-modal-controls">
              <button type="button" class="usa-button-outline cf-action-close cf-push-left" data-controls="#confirm-cancel-certification">Go back</button>
              <a href="<%=url_for :controller => 'web', :action => 'error' %>" class="cf-push-right cf-push-right cf-btn-faux cf-btn-faux--secondary" autofocus>Yes, I'm sure</a>
          </div>
      <!-- /modal box messaging -->
    </div>
</section>
