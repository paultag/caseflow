<%#
    Layout requires the following arguments
    - @kase: A Case object
%>

<% content_for :content do %>

<div id="certifications-header" class="cf-app-segment">
    <h2 class="cf-push-left"><%= @kase.correspondent.full_name %></h2>
    <div class="cf-txt-uc usa-cf-apppeal-id-control cf-push-right">
      Appeal ID &nbsp;
      <button type="submit" title="Copy to clipboard" class="cf-apppeal-id" data-clipboard-text="<%= @kase.bfcorlid %>">
          <%= @kase.bfcorlid %>
          <svg width="16" height="16" class="cf-icon-appeal-id" viewBox="0 0 21 21" xmlns="http://www.w3.org/2000/svg"><path d="M13.346 2.578h-2.664v-1.29C10.682.585 10.08 0 9.35 0H6.66c-.728 0-1.33.584-1.33 1.29v1.288H2.663v2.577h10.682V2.578zm-4.02 0H6.66v-1.29h2.665v1.29zm6.685 3.89V3.234a.665.665 0 0 0-.678-.656H14v1.29h.68v2.576H6.66v9.046H1.333V3.867h.68v-1.29H.678a.665.665 0 0 0-.68.657v12.913c0 .365.302.656.68.656h6.006v3.867h9.35l3.996-3.867V6.468h-4.02zm0 12.378v-2.043h2.112l-2.11 2.043zm2.665-3.356H14.68v3.867H7.992v-11.6h10.682v7.733z" fill="#5B616B" fill-rule="evenodd"/></svg>
      </button>
    </div>
</div>

  <div class="cf-app-segment">
    <div class="cf-layout-3-up cf-txt-c">
        <section>
          <h4 class="cf-txt-uc cf-layout-3-up-title">Appeal Type</h4>
          <p class="cf-layout-3-up-text"><%= @kase.appeal_type %></p>
        </section>
        <section>
          <h4 class="cf-txt-uc cf-layout-3-up-title cf-layout-3-up-title">File Type:</h4>
          <p class="cf-layout-3-up-text"><%= @kase.folder.file_type %></p>
        </section>
        <section>
          <h4 class="cf-txt-uc cf-layout-3-up-title">Representative:</h4>
          <p class="cf-layout-3-up-text"><%= @kase.initial_fields['8A_APPELLANT_REPRESENTED_IN_THIS_APPEAL_BY'] %></p>
        </section>
    </div>
  </div>

<% end %>

<%= render template: 'layouts/basic' %>
