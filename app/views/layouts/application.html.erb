<%#
    Layout requires the following arguments
    - @kase: A Case object
%>

<% content_for :content do %>

<div id="certifications-header" class="usa-cf_app-segment usa-cf_app-segment--v-pad">
    <h2 class="push-left"><%= @kase.correspondent.full_name %></h2>
    <div class="text-uc usa-cf--apppeal-id-control push-right">
      Appeal ID &nbsp; <button type="submit" title="Copy to clipboard" class="usa-cf--apppeal-id" data-clipboard-text="<%= @kase.bfcorlid %>"><%= @kase.bfcorlid %></button>
    </div>
</div>

  <div class="usa-cf_app-segment">
    <div class="usa-cf_app-3-up usa-cf_app-3-up--bordered text-center">
        <section>
          <h4 class="text-uc usa-cf_app-3-up-title">Appeal Type</h4>
          <span><%= @kase.appeal_type %></span>
        </section>
        <section>
          <h4 class="text-uc usa-cf_app-3-up-title usa-cf_app-3-up-title">File Type:</h4>
          <span><%= @kase.folder.file_type %></span>
        </section>
        <section>
          <h4 class="text-uc usa-cf_app-3-up-title">Representative:</h4>
          <span><%= @kase.initial_fields['8A_APPELLANT_REPRESENTED_IN_THIS_APPEAL_BY'] %></span>
        </section>
    </div>
  </div>

<% end %>

<%= render template: 'layouts/basic' %>
