(function() {
  "use strict";

  var app = angular.module('application');

  app.config(['$routeProvider', function($routeProvider) {
    $routeProvider.
      when('/certifications', {
        templateUrl: '<%= asset_path('certifications/index.html') %>',
        controller: 'CertificationsIndexController'
      }).
      when('/certifications/:id/start', {
        templateUrl: '<%= asset_path('certifications/start.html') %>',
        controller: 'CertificationsStartController'
      }).
      when('/certifications/:id/questions', {
        templateUrl: '<%= asset_path('certifications/questions.html') %>',
        controller: 'CertificationsQuestionsController'
      }).
      when('/tests', {
        templateUrl: '<%= asset_path('tests/index.html') %>',
        controller: 'TestsController'
      }).
      when('/tests/:id', {
        templateUrl: '<%= asset_path('tests/show.html') %>',
        controller: 'TestsController'
      }).
      otherwise({
        redirectTo: '/certifications'
      });
  }]);
})();
