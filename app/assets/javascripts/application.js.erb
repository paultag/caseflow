(function() {
  "use strict";

  var app = angular.module('application');

  app.config(['$routeProvider', function($routeProvider) {
    $routeProvider.
      when('/tests', {
        templateUrl: '<%= asset_path('tests/index.html') %>',
        controller: 'TestsController'
      }).
      when('/tests/:id', {
        templateUrl: '<%= asset_path('tests/show.html') %>',
        controller: 'TestsController'
      }).
      otherwise({
        redirectTo: '/tests'
      });
  }]);
})();
